{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "outDir": "dist/js",
        "noEmitOnError": false,
        "typeRoots": [ "node_modules/@types" ],
        "resolveJsonModule": true,
        "jsx": "react",
        "lib": [
            "es2019",
            "dom",
            "dom.iterable"
        ]
    },
    "include": [
        "src/**/*"
    ]
}